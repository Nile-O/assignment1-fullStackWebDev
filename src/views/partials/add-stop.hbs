<form class="box" action="/route/{{route._id}}/addstop" method="POST">
  <label>Enter Stop Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Title" name="title">
      </div>
      <div class="field">
        <input class="input" type="number" step="any" placeholder="Enter Location Latitude" name="locationlat">
      </div>
      <div class="field">
        <input class="input" type="number" step="any" placeholder="Enter Location Longitude" name="locationlong">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Description" name="description">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Stop</button>
</form>